         // Merge options and defaults
         for (var i in this.el.draw.defaults) {
@@ -139,6 +140,8 @@
         // Call the calc-function which calculates the new position and size
         this.calc(event);
 
+        this.m = this.el.node.getScreenCTM().inverse();
